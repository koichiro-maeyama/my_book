<div class="col-md-12">
<p id="notice"><%= notice %></p>

<h1>蔵書一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>表紙</th>
      <th>タイトル</th>
      <th>著者名</th>
      <th>価格</th>
      <th>出版社</th>
      <th>発売日</th>
      <th>ISBN コード</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookshelves.each do |bookshelf| %>
      <tr>
        <td><img src="<%= bookshelf.book_img %>" class="img-responsive"></td>
        <td><%= bookshelf.book_title %></td>
        <td><%= bookshelf.author %></td>
        <td><%= number_to_currency(bookshelf.price, unit:'¥',precision:0) %></td>
        <td><%= bookshelf.publisher %></td>
        <td><%= bookshelf.release_date %></td>
        <td><%= bookshelf.isbn_code %></td>
        <td><%= link_to '閲覧', bookshelf, class:"btn btn-success btn-xs" %></td>
        <td><%= link_to '編集', edit_bookshelf_path(bookshelf), class:"btn btn-info btn-xs" %></td>
        <td><%= link_to '削除', bookshelf,class:"btn btn-danger btn-xs",method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい書籍の登録', new_bookshelf_path, class:"btn btn-primary btn-lg" %>
</div>
